generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UnlockedAchievement {
  id            String   @id @default(uuid())
  coupleId      String
  achievementId String
  unlockedAt    DateTime @default(now())
  Couple        Couple   @relation(fields: [coupleId], references: [id])

  @@unique([coupleId, achievementId])
}

model DeletedLog {
  id          String   @id @default(uuid())
  coupleId    String
  description String
  deletedBy   String
  deletedAt   DateTime @default(now())
  Couple      Couple   @relation(fields: [coupleId], references: [id])
}

model JarMember {
  id       String       @id @default(uuid())
  userId   String
  jarId    String
  role     MemberRole   @default(MEMBER)
  joinedAt DateTime     @default(now())
  status   MemberStatus @default(ACTIVE)
  jar      Couple       @relation(fields: [jarId], references: [id])
  user     User         @relation(fields: [userId], references: [id])

  @@unique([userId, jarId])
  @@index([userId])
  @@index([status])
}

model User {
  id                    String           @id @default(uuid())
  email                 String           @unique
  name                  String
  passwordHash          String?
  mustChangePassword    Boolean          @default(false)
  coupleId              String?
  createdAt             DateTime         @default(now())
  homeTown              String?
  interests             String?
  hasUsedTrial          Boolean          @default(false)
  emailVerified         DateTime?
  verificationToken     String?
  passwordResetToken    String?
  passwordResetTokenExp DateTime?
  activeJarId           String?
  isLifetimePro         Boolean          @default(false)
  stripeCustomerId      String?          @unique
  stripeSubscriptionId  String?          @unique
  subscriptionEndsAt    DateTime?
  subscriptionStatus    String?
  premiumInviteToken    String?
  image                 String?
  accounts              Account[]
  analyticsEvents       AnalyticsEvent[]
  appReviews            AppReview[]
  favorites             FavoriteVenue[]
  assignedTasks         Idea[]           @relation("AssignedTo")
  createdIdeas          Idea[]           @relation("CreatedBy")
  memberships           JarMember[]
  rateLimit             RateLimit?
  ratings               Rating[]
  sessions              Session[]
  couple                Couple?          @relation(fields: [coupleId], references: [id])
  votes                 Vote[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Idea {
  id             String        @id @default(uuid())
  description    String
  indoor         Boolean
  duration       Float
  activityLevel  String
  cost           String
  timeOfDay      String        @default("ANY")
  coupleId       String
  createdById    String
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  selectedAt     DateTime?
  selectedDate   DateTime?
  rating         Int?
  notes          String?
  details        String?
  category       String        @default("ACTIVITY")
  address        String?
  googleRating   Float?
  openingHours   String?
  website        String?
  isSurprise     Boolean       @default(false)
  photoUrls      String[]
  isPrivate      Boolean       @default(false)
  requiresTravel Boolean       @default(false)
  weather        String        @default("ANY")
  assignedToId   String?
  status         IdeaStatus    @default(APPROVED)
  assignedTo     User?         @relation("AssignedTo", fields: [assignedToId], references: [id])
  Couple         Couple        @relation(fields: [coupleId], references: [id])
  createdBy      User          @relation("CreatedBy", fields: [createdById], references: [id])
  ratings        Rating[]
  votes          Vote[]
  wonSessions    VoteSession[] @relation("SessionWinner")

  @@index([createdById])
  @@index([status])
  @@index([coupleId, selectedAt])
  @@index([coupleId, status, selectedAt])
}

model Rating {
  id        String   @id @default(uuid())
  ideaId    String
  userId    String
  value     Int
  comment   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  idea      Idea     @relation(fields: [ideaId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id])

  @@unique([ideaId, userId])
}

model FavoriteVenue {
  id           String   @id @default(uuid())
  coupleId     String
  userId       String
  name         String
  address      String?
  description  String?
  websiteUrl   String?
  googleRating Float?
  type         String   @default("VENUE")
  createdAt    DateTime @default(now())
  isShared     Boolean  @default(false)
  Couple       Couple   @relation(fields: [coupleId], references: [id])
  user         User     @relation(fields: [userId], references: [id])

  @@index([coupleId])
}

model AppReview {
  id        String   @id @default(uuid())
  userId    String
  rating    Int
  comment   String
  isPublic  Boolean  @default(true)
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}

model VoteSession {
  id              String         @id @default(uuid())
  coupleId        String
  status          VoteStatus     @default(ACTIVE)
  startTime       DateTime       @default(now())
  endTime         DateTime?
  tieBreakerMode  TieBreakerMode @default(RANDOM_PICK)
  round           Int            @default(1)
  winnerId        String?
  eligibleIdeaIds String[]
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  votes           Vote[]
  Couple          Couple         @relation(fields: [coupleId], references: [id])
  winner          Idea?          @relation("SessionWinner", fields: [winnerId], references: [id])
}

model Vote {
  id        String      @id @default(uuid())
  sessionId String
  userId    String
  ideaId    String
  createdAt DateTime    @default(now())
  idea      Idea        @relation(fields: [ideaId], references: [id])
  session   VoteSession @relation(fields: [sessionId], references: [id])
  user      User        @relation(fields: [userId], references: [id])

  @@unique([sessionId, userId])
}

model AICache {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String
  createdAt DateTime @default(now())
  expiresAt DateTime
}

model RateLimit {
  id          String   @id @default(cuid())
  userId      String   @unique
  count       Int      @default(0)
  windowStart DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model AnalyticsEvent {
  id        String   @id @default(uuid())
  type      String
  name      String
  value     Float?
  metadata  Json?
  userId    String?
  sessionId String?
  path      String?
  createdAt DateTime @default(now())
  user      User?    @relation(fields: [userId], references: [id])

  @@index([type, name])
  @@index([createdAt])
}

model Couple {
  id                   String                @id
  referenceCode        String                @unique
  location             String?
  createdAt            DateTime              @default(now())
  isPremium            Boolean               @default(false)
  isTrialEligible      Boolean               @default(true)
  isLegacyPremium      Boolean               @default(false)
  stripeCustomerId     String?
  stripeSubscriptionId String?
  subscriptionStatus   String?
  level                Int                   @default(1)
  xp                   Int                   @default(0)
  name                 String                @default("Our Jar")
  type                 JarType               @default(SOCIAL)
  topic                String?               @default("General")
  customCategories     Json?
  selectionMode        SelectionMode         @default(RANDOM)
  description          String?
  imageUrl             String?
  isCommunityJar       Boolean               @default(false)
  memberLimit          Int?
  subscriptionRenewsAt DateTime?
  DeletedLog           DeletedLog[]
  FavoriteVenue        FavoriteVenue[]
  Idea                 Idea[]
  members              JarMember[]
  UnlockedAchievement  UnlockedAchievement[]
  legacyUsers          User[]
  VoteSession          VoteSession[]
}

enum JarType {
  ROMANTIC
  SOCIAL
  GENERIC
}

enum IdeaStatus {
  APPROVED
  PENDING
  ARCHIVED
}

enum MemberRole {
  ADMIN
  MEMBER
}

enum MemberStatus {
  ACTIVE
  PENDING
  WAITLISTED
  INVITED
}

enum SubscriptionStatus {
  ACTIVE
  PAST_DUE
  CANCELED
  TRIALLING
}

enum SelectionMode {
  RANDOM
  VOTING
  ALLOCATION
  ADMIN_PICK
}

enum VoteStatus {
  ACTIVE
  COMPLETED
  CANCELLED
}

enum TieBreakerMode {
  RANDOM_PICK
  RE_VOTE
}
